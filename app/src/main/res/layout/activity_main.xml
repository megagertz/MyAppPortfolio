<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" tools:context=".MainActivity">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".MainActivity">



        <Button
            style="@style/ButtonStyle"
            android:onClick="spotify_streamer"
            android:text="@string/spotify_streamer_button" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="scores"
            android:text="@string/scores_button" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="library"
            android:text="@string/library_button" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="build_it_bigger"
            android:text="@string/build_it_bigger_button" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="xyz_reader"
            android:text="@string/xyz_reader_button" />

        <Button
            style="@style/ButtonStyle"
            android:background="@android:color/holo_red_dark"
            android:onClick="capstone"
            android:text="@string/capstone_button" />



    </LinearLayout>

</RelativeLayout>